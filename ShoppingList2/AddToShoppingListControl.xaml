<UserControl x:Class="ShoppingList2.AddToShoppingListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingList2"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20">Add Item to List</TextBlock>
        <TextBox KeyDown="OnEnterKeyPress" Name="ItemToAdd" Grid.Row="1"/>
        <Button Name="AddButton" Grid.Row="2" FontSize="20">Add</Button>            
    </Grid>
</UserControl>
